{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "test-utils", "**/*.test.ts", "**/*.test.tsx", "__tests__", "__mocks__", "jest.setup.js", "jest.config.js", "backups", "scripts", "**/*.backup.*", "src/lib/performance/**", "src/lib/monitoring/**", "src/lib/testing/**", "src/lib/sentry/**", "src/lib/posthog/**", "src/lib/security/dynamic-menu.ts", "src/lib/security/dynamic-rbac-simple.ts", "src/lib/utils/rate-limit-advanced.ts", "src/__tests__/**", "src/lib/utils/api-test-helpers.ts", "src/lib/meeting-intelligence/**", "src/lib/middleware/**"]
}
