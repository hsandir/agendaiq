# ====================================
# ENVIRONMENT CONFIGURATION
# ====================================
# Copy this file to .env.local for local development
# For production, set these in Vercel Dashboard

# ====================================
# DATABASE CONFIGURATION
# ====================================

# LOCAL DEVELOPMENT (PostgreSQL)
# For local development, use your local PostgreSQL database
DATABASE_URL="postgresql://username:your-db-pass@localhost:5432/agendaiq"

# PRODUCTION (Supabase)
# For production, use Supabase connection strings
# Get these from: Supabase Dashboard > Settings > Database
# DATABASE_URL="postgresql://postgres.[your-pass]:@aws-0-us-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
# DIRECT_URL="postgresql://postgres:[your-pass]@db.[project-ref].supabase.co:5432/postgres"

# ====================================
# SUPABASE CONFIGURATION (Production Only)
# ====================================
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# ====================================
# AUTHENTICATION
# ====================================
NEXTAUTH_URL=http://localhost:3000  # Change to your domain in production
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-value"

# ====================================
# REAL-TIME FEATURES (Optional)
# ====================================
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_SECRET="your-pusher-value"
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
NEXT_PUBLIC_PUSHER_CLUSTER="your-pusher-cluster"

# ====================================
# MONITORING (Optional)
# ====================================
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# ====================================
# EMAIL CONFIGURATION
# ====================================
# Gmail/Google Workspace SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="info@agendaiq.app"
SMTP_AUTH_KEY="your_app_specific_auth_key_here"
SMTP_FROM="info@agendaiq.app"
SMTP_REPLY_TO="info@agendaiq.app"

# ====================================
# FEATURE FLAGS (Safe Deployment)
# ====================================
# Teams Feature - Set to false in production until ready
NEXT_PUBLIC_FEATURE_TEAMS=false
NEXT_PUBLIC_TEAMS_PHASE_1=false
NEXT_PUBLIC_TEAMS_PHASE_2=false
NEXT_PUBLIC_TEAMS_PHASE_3=false
NEXT_PUBLIC_TEAMS_PHASE_4=false

# Teams Configuration
NEXT_PUBLIC_MAX_TEAMS_PER_USER=10
NEXT_PUBLIC_MAX_MEMBERS_PER_TEAM=50
NEXT_PUBLIC_TEAMS_ANALYTICS=false

# Email Feature
EMAIL_ENABLED="true"

# ====================================
# ENVIRONMENT RULES
# ====================================
# Development: Uses local PostgreSQL
# Production (Vercel): Uses Supabase
# 
# The system automatically detects the environment:
# - If VERCEL=1 or NODE_ENV=production → Use Supabase
# - Otherwise → Use local PostgreSQL
#
# To test production database locally:
# 1. Set NODE_ENV=production in .env.local
# 2. Add Supabase URLs to .env.local
# 3. Run: npm run dev